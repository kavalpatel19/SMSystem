@model SMSystem.Models.Auth.PasswordModel

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Change Password</h5>
        <div class="row">
            <div class="col-md-10 col-lg-6">
                <form asp-action="ChangePassword">
                    <div class="form-group">
                        <label asp-for="OldPassword">Old Password</label>
                        <input type="text" asp-for="OldPassword" class="form-control">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword">New Password</label>
                        <input type="text" asp-for="NewPassword" class="form-control">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input type="text" asp-for="ConfirmPassword" class="form-control">                        
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />
